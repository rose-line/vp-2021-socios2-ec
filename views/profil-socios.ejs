<%- include('partials/header') %>

<div class="container py-md-5 container--narrow">
  <h2>
    <img
      class="avatar-small"
      src="https://gravatar.com/avatar/b9408a09298632b5151200f3449434ef?s=128"
    />
    <%= auteur %>
    <form class="ml-2 d-inline">
      <button class="btn btn-primary btn-sm">
        S'abonner <i class="fas fa-user-plus"></i>
      </button>
      <!-- <button class="btn btn-danger btn-sm">Se désabonner <i class="fas fa-user-times"></i></button> -->
    </form>
  </h2>

  <div class="profile-nav nav nav-tabs pt-2 mb-4">
    <a href="#" class="profile-nav-link nav-item nav-link active">Socios : 3</a>
    <a href="#" class="profile-nav-link nav-item nav-link">Abonnés : 3</a>
    <a href="#" class="profile-nav-link nav-item nav-link">Abonnements : 2</a>
  </div>

  <div class="list-group">
    <% lesSocios.forEach(socios => { %>
    <a
      href="/socios/<%= socios._id %>"
      class="list-group-item list-group-item-action"
    >
      <img
        class="avatar-tiny"
        src="https://gravatar.com/avatar/b9408a09298632b5151200f3449434ef?s=128"
      />
      <strong><%= socios.titre %></strong> le <%=
      socios.dateCreation.toLocaleDateString( 'fr', { year: 'numeric', month:
      'long', day: 'numeric' } ) // 18 Février 2019 %>
    </a>

    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
