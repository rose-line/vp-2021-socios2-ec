<%- include('partials/header') %>

<div class="container py-md-5 container--narrow">
  <div class="d-flex justify-content-between">
    <h2><%= socios.titre %></h2>

    <% if (estAuteur) { %>

    <span class="pt-2">
      <a
        href="/socios/<%= socios._id %>/editer"
        class="mr-2 text-primary"
        data-toggle="tooltip"
        data-placement="top"
        title="Éditer"
        ><i class="fas fa-edit"></i
      ></a>
      <form class="delete-post-form d-inline">
        <button
          class="delete-post-button text-danger"
          data-toggle="tooltip"
          data-placement="top"
          title="Supprimer"
        >
          <i class="fas fa-trash"></i>
        </button>
      </form>
    </span>

    <% } %>
  </div>

  <p class="mb-4 text-muted small">
    <a href="#"
      ><img
        class="avatar-tiny"
        src="https://gravatar.com/avatar/f64fc44c03a8a7eb1d52502950879659?s=128"
    /></a>
    Façonné avec passion par <a href="#"><%= socios.auteur.nom %></a> le <%=
    socios.dateCreation.toLocaleDateString( 'fr', { year: 'numeric', month:
    'long', day: 'numeric' } ) %>
  </p>

  <div class="body-content"><%= socios.contenu %></div>
</div>

<footer class="py-3 text-center border-top small text-muted">
  <p class="m-0">
    Copyright &copy; 2020 <a href="/" class="text-muted">Socios</a>. Tous droits
    réservés.
  </p>
</footer>

<%- include('partials/footer') %>
